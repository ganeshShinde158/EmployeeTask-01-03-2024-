@model List<EmployeeModel>




<div class="row">
    <div class="col-10">
        <a asp-action="AddEmployee" class="btn btn-success">Add Employee</a>
    </div>

    <div class="col-2">
        <a asp-action="Logout" class="btn btn-danger">Logout</a>
    </div>
</div>


    <table class="table table-responsive">
    <thead>
        <tr class="text-center">
            <th>Employee ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>City</th>
            <th>Age</th>
            <th>Date of Joining</th>
            <th>Department</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody class="text-center">
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.EmployeeID</td>
                <td>@employee.FirstName</td>
                <td>@employee.LastName</td>
                <td>@employee.City</td>
                <td>@employee.Age</td>
                <td>@employee.DOJ.ToShortDateString()</td>
                <td>@employee.Department</td>
                <td>
                    <a asp-action="EditEmployee" asp-route-id="@employee.EmployeeID" class="btn btn-primary">Edit</a>

                    <a asp-action="DeleteEmployeeById" asp-route-id="@employee.EmployeeID" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>


